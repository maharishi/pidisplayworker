[Unit]Description=PiHole Statistics LCD Display WorkerAfter=pihole-FTL.service[Service]Type=notify# will set the Current Working Directory (CWD). Worker service will have issues without this settingWorkingDirectory=/srv/piholedisplay/# systemd will run this executable to start the serviceExecStart=/srv/piholedisplay/pidisplayworker# to query logs using journalctl, set a logical name here  SyslogIdentifier=pidisplay.worker# Use your username to keep things simple.# If you pick a different user, make sure dotnet and all permissions are set correctly to run the app# To update permissions, use 'chown yourusername -R /srv/Worker' to take ownership of the folder and files,#       Use 'chmod +x /srv/Worker/Worker' to allow execution of the executable file# ensure the service restarts after crashingRestart=always# amount of time to wait before restarting the service              RestartSec=5KillMode=mixed# This environment variable is necessary when dotnet isn't loaded for the specified user.# To figure out this value, run 'env | grep DOTNET_ROOT' when dotnet has been loaded into your shell.Environment=DOTNET_ROOT=/home/ubuntu/.dotnet  [Install]WantedBy=multi-user.target